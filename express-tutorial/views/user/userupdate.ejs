<h1>User Update</h1>
<form action="/user/userupdate" method="post">
    <input type="hidden" name="id" id="id" value="<%= user._id %>"><br>
    <label for="name">User Name</label>
    <input type="text" name="user_name" id="name" value="<%= user.name %>"><br>
    <label for="email">User Email</label>
    <input type="email" name="user_email" id="email" value="<%= user.email %>"><br>
    <label for="password">Password</label>
    <input type="password" name="password" id="password" value="<%= user.password %>"><br>
    <input type="submit" value="Update">
</form>
